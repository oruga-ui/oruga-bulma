{
  "name": "@oruga-ui/theme-bulma",
  "version": "0.3.0",
  "description": "Bulma theme for Oruga",
  "license": "MIT",
  "main": "dist/bulma.js",
  "module": "dist/bulma.mjs",
  "unpkg": "dist/bulma.min.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types/*.d.ts"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oruga-ui/theme-bulma.git"
  },
  "bugs": {
    "url": "https://github.com/oruga-ui/theme-bulma/issues"
  },
  "scripts": {
    "dev": "vite --force",
    "dev:lib": "rimraf dist && rollup -c --watch",
    "build": "vue-tsc --noEmit && vite build",
    "build:lib": "rimraf dist && rollup -c",
    "serve": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "update": "ncu -u"
  },
  "dependencies": {
    "bulma": "0.9.4"
  },
  "devDependencies": {
    "@oruga-ui/examples": "^0.9.0-pre.1",
    "@oruga-ui/oruga-next": "^0.9.0-pre.1",
    "@rollup/plugin-typescript": "11.1.6",
    "@vitejs/plugin-vue": "5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "10.4.19",
    "clean-css-cli": "^5.6.3",
    "core-js": "3.37.1",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.27.0",
    "npm-check-updates": "^16.14.20",
    "postcss": "8.4.39",
    "prettier": "^3.3.3",
    "rimraf": "6.0.1",
    "rollup": "^4.18.1",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-sass": "1.13.1",
    "sass": "1.77.8",
    "typescript": "5.5.3",
    "vite": "^5.3.4",
    "vue": "3.4.32",
    "vue-router": "4.4.0",
    "vue-tsc": "2.0.26"
  }
}
